<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_s3"
    android:layout_marginTop="@dimen/margin_s7"
    android:layout_marginBottom="@dimen/margin_s3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_person"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            tools:src="@drawable/ic_person_blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_s2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_s6"
                android:textColor="@color/dark_solid"
                android:fontFamily="@font/gotham_medium"
                tools:text="Bedirhan Dağ" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_solid"
                android:fontFamily="@font/gotham_book"
                android:textSize="@dimen/text_size_s6"
                tools:text="21/12/1922" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_s2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_bagde"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_sorun_cozucu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_badge_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_s9"
                android:textColor="@color/dark_solid"
                android:fontFamily="@font/gotham_medium"
                tools:text="Takım Oyuncusu" />

            <RatingBar
                android:id="@+id/rb_rate"
                style="@style/CustomRatingBarStyle"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:rating="5" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_s3"
        android:fontFamily="@font/gotham_book"
        android:textColor="@color/dark_solid"
        android:textSize="@dimen/text_size_s6"
        tools:text="Gerçek bir takım arkadaşısın.
         Birlikte çalışmanın çok zevkliydi aynı zamanda farklı
          açılardan bakmama yardımcı olsun, teşekkür ederim." />


</LinearLayout>